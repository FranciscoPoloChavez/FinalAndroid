        <item name="colorPrimary">#863EED</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MapaTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="title">"Worldwide Map Coronavirus"</item>
        <item name="android:windowBackground">#D8C2F6</item>
        <item name="colorPrimary">#863EED</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="PreventionTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="title">"How Stay Safe"</item>
        <item name="android:windowBackground">#D8C2F6</item>
        <item name="colorPrimary">#863EED</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="GalleryTheme" parent="Theme.AppCompat.Light.DarkActionBar">
